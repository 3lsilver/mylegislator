<com.berg.mylegislator.view.Panel 
   	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/legislator_panel"   	
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center_vertical|center_horizontal">
	<TextView  
		android:id="@+id/fullname"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	   	android:paddingTop="5dip" 
	   	android:paddingLeft="15dip"
	   	android:paddingRight="15dip"
	   	android:paddingBottom="5dip" 
    	android:layout_gravity="center_horizontal"
	   	android:textSize="20dip"
	    />
	 <com.berg.mylegislator.view.InnerPanel
	    xmlns:android="http://schemas.android.com/apk/res/android"  
	    android:id="@+id/legislator_inner_panel"    	
	    android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:paddingTop="10dip"
	    android:paddingBottom="15dip"
	   	 >
			 <TextView  
				android:id="@+id/district"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:paddingLeft="15dip"
	   			android:paddingRight="15dip"
	   			android:paddingTop="5dip"
	   			android:paddingBottom="5dip"
			    />
			<ScrollView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/chatview"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
			<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  			android:orientation="vertical"
	  			android:layout_width="fill_parent" 
	  			android:layout_height="wrap_content" 
	  			android:shrinkColumns="1"
	  			>
	  		<com.berg.mylegislator.view.GradientedTableRow
  				android:id="@+id/term_ends_row" > 
		  	    <TextView 
					android:text="Term Ends:"
					android:paddingLeft="15dip" 
					android:paddingRight="5dip"
					android:paddingTop="5dip"
					android:paddingBottom="5dip"
					/>	
			    <TextView 
			    	android:id="@+id/term_ends"
			    	android:layout_width="fill_parent"
			    	android:paddingRight="15dip"
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip"
			    	/>
			</com.berg.mylegislator.view.GradientedTableRow>
  			<com.berg.mylegislator.view.GradientedTableRow
  				android:id="@+id/email_row"
  				android:focusableInTouchMode="true"
  				> 
		  	    <TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="15dip"
					android:paddingTop="5dip"
					android:paddingBottom="5dip"
					android:text="Email:" 
			 
					/>	
			    <TextView 
			    	android:id="@+id/email"
			    	android:layout_width="fill_parent"
			    	android:paddingRight="15dip" 
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip"
			    	/>
			</com.berg.mylegislator.view.GradientedTableRow>
			<com.berg.mylegislator.view.GradientedTableRow
				android:id="@+id/phone_row"
  				android:focusableInTouchMode="true"
  				android:layout_height="wrap_content" 
  				> 
		  	    <TextView 
		  	    	android:id="@+id/cell_width"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="15dip"
					android:paddingTop="5dip"
					android:paddingBottom="5dip" 
					android:text="Phone:" 
					/>	
			    <TextView android:id="@+id/phone"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content" 
			    	android:paddingRight="15dip"
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip" 
			    	/>
			</com.berg.mylegislator.view.GradientedTableRow> 
			<com.berg.mylegislator.view.GradientedTableRow
				android:id="@+id/fax_row"
  				android:focusableInTouchMode="true"
  				> 
		  	    <TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="15dip" 
					android:paddingTop="5dip"
					android:paddingBottom="5dip"
					android:text="Fax:" 
			 
					/>	
			    <TextView 
			    	android:id="@+id/fax"
			    	android:paddingRight="15dip"
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip" 
			    	android:layout_width="fill_parent"
			    	/>
			</com.berg.mylegislator.view.GradientedTableRow>
			<com.berg.mylegislator.view.GradientedTableRow
				android:id="@+id/address_row"
  				android:focusableInTouchMode="true"
  				> 
		  	    <TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="15dip"
					android:paddingTop="5dip"
					android:paddingBottom="5dip" 
					android:text="Address:"
					/>	
			    <TextView 
			    	android:paddingRight="15dip" 
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip"
			    	android:id="@+id/address"
			    	android:layout_width="fill_parent"
			    	/>
			</com.berg.mylegislator.view.GradientedTableRow>
			<com.berg.mylegislator.view.GradientedTableRow
				android:id="@+id/website_row"
  				android:focusableInTouchMode="true"
  				android:layout_width="fill_parent"
			    android:layout_height="wrap_content" > 
		  	    <TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="15dip"
					android:paddingTop="5dip"
					android:paddingBottom="5dip" 
					android:text="Website"
					/>	
				>
			    <TextView 
			    	android:id="@+id/website_url"
			    	android:paddingRight="15dip" 
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip"
			    	android:layout_width="fill_parent"
			    	/>
			</com.berg.mylegislator.view.GradientedTableRow>
			<com.berg.mylegislator.view.GradientedTableRow
				android:id="@+id/webform_row"
  				android:focusableInTouchMode="true"
  				> 
		  	    <TextView 
		  	   	    android:paddingLeft="15dip" 
		  	   	    android:paddingTop="5dip"
					android:paddingBottom="5dip"
					android:text="Webform:" 
				/>	
			    <TextView 
			   		android:paddingRight="15dip" 
			   		android:paddingTop="5dip"
					android:paddingBottom="5dip"
			    	android:id="@+id/webform_url"
			    	android:layout_width="fill_parent"
			    />
			</com.berg.mylegislator.view.GradientedTableRow>
			<com.berg.mylegislator.view.GradientedTableRow
				android:id="@+id/twitter_row"
  				android:focusableInTouchMode="true"
  				> 
		  	    <TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="15dip"
					android:paddingTop="5dip"
					android:paddingBottom="5dip" 
					android:text="Twitter:" 
					/>	
			    <TextView 
			    	android:id="@+id/twitter"
			    	android:paddingRight="15dip" 
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip"
			    	
			    	/>
			</com.berg.mylegislator.view.GradientedTableRow>  
			<com.berg.mylegislator.view.GradientedTableRow
				android:id="@+id/youtube_row"
  				android:focusableInTouchMode="true"
  				android:longClickable="true"> 
		  	    <TextView 
					android:layout_height="wrap_content"
					android:paddingLeft="15dip"
					android:paddingTop="5dip"
					android:paddingBottom="5dip" 
					android:text="Youtube:" 
					/>	
			    <TextView 
			    	android:id="@+id/youtube"
			    	android:paddingRight="15dip" 
			    	android:paddingTop="5dip"
					android:paddingBottom="5dip"
			    
			    />
			</com.berg.mylegislator.view.GradientedTableRow>    
		</TableLayout>
		</ScrollView>
	 </com.berg.mylegislator.view.InnerPanel>
</com.berg.mylegislator.view.Panel>
